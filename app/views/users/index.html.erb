<div class = "user-container">
<% @users.each do |user|%>
<div class = 'user-info'>
    <img src = "<%= user.photo %>" class = "user-avatar">
    <%= user.name%>
    <%= user.bio%>
    <%= user.id%>
    <div class = 'post-counter'>
    Number of posts <%= user.posts.length%>
    </div>
   </div>

<% end %>

</div>


