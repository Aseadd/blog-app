<h2>Sign up</h2>

<div class="signup-form">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Enter Name" %>
  </div>

    <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_field :bio, autofocus: true, autocomplete: "bio", placeholder: "Enter Bio" %>
  </div>

  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter Email" %>
  </div>

    <div class="field">
    <%= f.label :email_confirmation %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter Email" %>
  </div>
 
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Enter Passowrd" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder: "Re-enter password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
<div class= "other-links">
<%= render "users/shared/links" %>
</div>
</div>